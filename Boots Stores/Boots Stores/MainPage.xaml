<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Boots_Stores.MainPage">

    <StackLayout>
        <Label x:Name="lab_StoreNumber" Text="{Binding StoreNumber}" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        <Label x:Name="lab_StoreName" Text="{Binding StoreName}" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        <Button x:Name="btn_ShowStore"  Text="Show Store"></Button>
        <Button x:Name="btn_Next"  Text="Next"></Button>
    </StackLayout>

</ContentPage>
